{
  "name": "mantle-lit",
  "version": "0.1.0",
  "description": "A lightweight library for building Lit web components with a simpler class-based API and MobX reactivity built in.",
  "author": "Craig Albert <me@craigalbert.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/craigthings/mantle-lit"
  },
  "homepage": "https://github.com/craigthings/mantle-lit#readme",
  "bugs": {
    "url": "https://github.com/craigthings/mantle-lit/issues"
  },
  "license": "MIT",
  "keywords": [
    "lit",
    "web-components",
    "mobx",
    "viewmodel",
    "mvvm",
    "class-components"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "custom-elements.json"
  ],
  "customElements": "playground/custom-elements.json",
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "tsup && npm run analyze",
    "analyze": "cem analyze",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "lit": ">=3.0.0",
    "mobx": ">=6.0.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.10",
    "@types/node": "^25.2.2",
    "lit": "^3.1.0",
    "mobx": "^6.12.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  }
}
